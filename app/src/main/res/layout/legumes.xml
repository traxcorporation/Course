<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9dff6caa"
    android:orientation="vertical"
    android:weightSum="1"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:src="@drawable/legume"
            android:layout_marginTop="3px"
             />

    </LinearLayout>
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:src="@drawable/carotte"
            android:layout_marginTop="3px"
            />

        <CheckBox
            android:layout_height="wrap_content"
            android:id="@+id/carotte"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="3px"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:src="@drawable/concombre"
            android:layout_marginTop="3px"
            />

        <CheckBox
            android:layout_height="wrap_content"
            android:id="@+id/concombre"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="3px"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:src="@drawable/piment"
            android:layout_marginTop="3px"
            />

        <CheckBox
            android:layout_height="wrap_content"
            android:id="@+id/piment"
            android:layout_width="wrap_content"
            android:layout_marginTop="3px"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:src="@drawable/poivron"
            android:layout_marginTop="3px"
            />
        <CheckBox
            android:layout_height="wrap_content"
            android:id="@+id/poivron"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="3px"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:src="@drawable/pommedeterre"
            android:layout_marginTop="3px"
            />

        <CheckBox
            android:layout_height="wrap_content"
            android:id="@+id/pommedeterre"
            android:layout_width="wrap_content"
            android:layout_marginTop="3px"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:src="@drawable/salade"
            android:layout_marginTop="3px"
            />

        <CheckBox
            android:layout_height="wrap_content"
            android:id="@+id/salade"
            android:layout_width="wrap_content"
            android:layout_marginTop="3px"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:src="@drawable/tomates"
            android:layout_marginTop="3px"
            />

        <CheckBox
            android:layout_height="wrap_content"
            android:id="@+id/tomates"
            android:layout_width="wrap_content"
            android:layout_marginTop="3px"

            />


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enregistrer"
        android:id="@id/Save"
        android:layout_marginTop="10px"
        />


</LinearLayout>